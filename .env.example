# ═══════════════════════════════════════════════════════════════════════════════
# Otori Monitoring - Environment Variables
# ═══════════════════════════════════════════════════════════════════════════════
# Copiez ce fichier vers .env et adaptez les valeurs
#   cp .env.example .env
# ═══════════════════════════════════════════════════════════════════════════════

# ───────────────────────────────────────────────────────────────────────────────
# Application
# ───────────────────────────────────────────────────────────────────────────────
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# ───────────────────────────────────────────────────────────────────────────────
# Database
# ───────────────────────────────────────────────────────────────────────────────
# Pour développement local (SQLite):
# DATABASE_URL=sqlite:///./otori.db

# Pour Docker (PostgreSQL):
DATABASE_URL=postgresql://otori:otori_dev_password@db:5432/otori

# Credentials PostgreSQL (utilisés par docker-compose)
POSTGRES_USER=otori
POSTGRES_PASSWORD=otori_dev_password
POSTGRES_DB=otori

# ───────────────────────────────────────────────────────────────────────────────
# Ports
# ───────────────────────────────────────────────────────────────────────────────
API_PORT=8000
DB_PORT=5432
NGINX_PORT=80

# ───────────────────────────────────────────────────────────────────────────────
# GeoIP
# ───────────────────────────────────────────────────────────────────────────────
GEOIP_ENABLED=true
GEOIP_DB_PATH=data/GeoLite2-City.mmdb

# ───────────────────────────────────────────────────────────────────────────────
# Analytics Features
# ───────────────────────────────────────────────────────────────────────────────
ANALYTICS_ENABLED=true
BOT_DETECTION_ENABLED=true
MITRE_MAPPING_ENABLED=true
SESSION_SCORING_ENABLED=true

# ───────────────────────────────────────────────────────────────────────────────
# KPIs
# ───────────────────────────────────────────────────────────────────────────────
KPI_DEFAULT_WINDOW_HOURS=24
KPI_MAX_TOP_ITEMS=10
